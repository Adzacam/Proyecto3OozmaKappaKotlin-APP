<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#EF4444"
        app:strokeWidth="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    app:tint="#EF4444"
                    android:background="@drawable/circle_background_dark"
                    android:padding="10dp" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvDocumentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Documento"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                <TextView
                        android:id="@+id/tvDocumentDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Descripción del documento"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tvDocumentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_event_type_badge"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="PDF"
                    android:textColor="#60A5FA"
                    android:textSize="11sp"
                    android:textStyle="bold" />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#334155" />

        <TextView
                android:id="@+id/tvDocumentProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="8dp"
                android:drawableTint="#B8FF3C"
                android:text="Proyecto"
                android:textColor="#CBD5E1"
                android:textSize="12sp" />

        <TextView
                android:id="@+id/tvDeletedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:drawableTint="#F87171"
                android:text="Eliminado: 23/10/2025 (5 días)"
                android:textColor="#F87171"
                android:textSize="12sp" />

        <TextView
                android:id="@+id/tvWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#2EEF4444"
                android:padding="8dp"
                android:text="⚠️ Se eliminará permanentemente en 5 días"
                android:textColor="#F59E0B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="end">

            <Button
                    android:id="@+id/btnRestore"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#B8FF3C"
                    android:text="Restaurar"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />

            <Button
                    android:id="@+id/btnPermanentDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="#EF4444"
                    android:text="Eliminar"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>