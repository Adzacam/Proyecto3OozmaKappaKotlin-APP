<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0F172A"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="#FFFFFF">

        <include
                android:id="@+id/topAppBar"
                layout="@layout/layout_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Content -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- Title -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablero Kanban"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                <!-- Filtros -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!-- Proyecto -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proyecto:"
                                android:textColor="#B8FF3C"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp" />

                        <Spinner
                                android:id="@+id/spinnerProject"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_spinner"
                                android:paddingHorizontal="12dp" />
                    </LinearLayout>

                    <!-- Responsable -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Responsable:"
                                android:textColor="#B8FF3C"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp" />

                        <Spinner
                                android:id="@+id/spinnerResponsible"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_spinner"
                                android:paddingHorizontal="12dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Empty state -->
                <TextView
                        android:id="@+id/tvEmptyKanban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:text="Selecciona un proyecto para ver su tablero de tareas."
                        android:textAlignment="center"
                        android:textColor="#6B7280"
                        android:textSize="16sp" />

                <!-- Kanban Columns (HorizontalScrollView cuando haya datos) -->
                <HorizontalScrollView
                        android:id="@+id/hsvKanban"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:visibility="gone">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp">

                        <!-- Columna: Pendiente -->
                        <androidx.cardview.widget.CardView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="#0F172A"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:strokeColor="#6B82F6"
                                app:strokeWidth="2dp">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="ðŸ“‹ Pendiente"
                                        android:textColor="#B8FF3C"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvTasksPendiente"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginTop="12dp"
                                        android:layout_weight="1" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Columna: En Progreso -->
                        <androidx.cardview.widget.CardView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="#0F172A"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:strokeColor="#F59E0B"
                                app:strokeWidth="2dp">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="âš¡ En Progreso"
                                        android:textColor="#F59E0B"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvTasksEnProgreso"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginTop="12dp"
                                        android:layout_weight="1" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Columna: Completado -->
                        <androidx.cardview.widget.CardView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="#0F172A"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:strokeColor="#10B981"
                                app:strokeWidth="2dp">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="âœ… Completado"
                                        android:textColor="#10B981"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvTasksCompletado"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginTop="12dp"
                                        android:layout_weight="1" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- FAB para crear tarea -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Crear tarea"
            app:backgroundTint="#B8FF3C"
            app:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>