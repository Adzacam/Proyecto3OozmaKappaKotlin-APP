<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#0F172A">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

        <!-- T铆tulo del Di谩logo -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" HISTORIAL DE VERSIONES"
                android:textColor="#60A5FA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        <!-- Nombre del Plano -->
        <TextView
                android:id="@+id/tvTituloPlano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Plano"
                android:textColor="#B8FF3C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

        <!-- Total de Versiones -->
        <TextView
                android:id="@+id/tvTotalVersiones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total de versiones: 0"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

        <!-- Bot贸n Subir Nueva Versi贸n -->
        <Button
                android:id="@+id/btnSubirNuevaVersion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text=" Subir Nueva Versi贸n"
                android:textColor="#000000"
                android:backgroundTint="#B8FF3C"
                android:layout_marginBottom="16dp"
                app:cornerRadius="8dp" />

        <!-- RecyclerView de Versiones -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVersions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:maxHeight="400dp"
                android:background="@drawable/badge_background"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

        <!-- Empty State -->
        <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay versiones disponibles"
                android:textAlignment="center"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginVertical="32dp" />

        <!-- Progress Bar -->
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginVertical="32dp" />

        <!-- Bot贸n Cerrar -->
        <Button
                android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cerrar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#64748B"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                app:cornerRadius="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>