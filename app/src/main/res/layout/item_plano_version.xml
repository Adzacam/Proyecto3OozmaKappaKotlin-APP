<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#6B82F6"
        app:strokeWidth="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_history"
                    app:tint="#8B5CF6"
                    android:background="@drawable/circle_background_dark"
                    android:padding="10dp" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Versión 2.0"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Corrección de medidas en planta baja"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tvVersionActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ ACTUAL"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/badge_background"
                    android:backgroundTint="#B8FF3C"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:visibility="visible" />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#334155"
                android:layout_marginVertical="12dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

            <TextView
                    android:id="@+id/tvSubidoPor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subido por: Juan Pérez"
                    android:textColor="#64748B"
                    android:textSize="11sp" />

            <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/11/2025 14:30"
                    android:textColor="#64748B"
                    android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

            <Button
                    android:id="@+id/btnEstablecerActual"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Establecer Actual"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:backgroundTint="#B8FF3C"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp"
                    android:visibility="visible" />

            <Button
                    android:id="@+id/btnDescargar"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Descargar"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3B82F6"
                    app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>