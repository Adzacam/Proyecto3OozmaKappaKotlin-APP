<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="8dp"
                                   app:cardBackgroundColor="#1E293B"
                                   app:cardCornerRadius="6dp"
                                   app:cardElevation="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <!-- Título de la tarea -->
        <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la tarea"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
                android:id="@+id/tvTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Descripción breve de la tarea"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />

        <!-- Prioridad y fecha -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvTaskPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_priority_high"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Alta"
                    android:textColor="#EF4444"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <TextView
                    android:id="@+id/tvTaskDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/01/2025"
                    android:textColor="#6B7280"
                    android:textSize="11sp" />

        </LinearLayout>

        <!-- Asignado a -->
        <TextView
                android:id="@+id/tvTaskAssigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Asignado: Usuario"
                android:textColor="#B8FF3C"
                android:textSize="11sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>