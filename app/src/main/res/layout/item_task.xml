<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#6B82F6"
        app:strokeWidth="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la tarea"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        <TextView
                android:id="@+id/tvTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Descripción breve de la tarea"
                android:textColor="#94A3B8"
                android:textSize="12sp" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#334155" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/tvTaskPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_priority_high"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="Alta"
                    android:textColor="#EF4444"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <TextView
                    android:id="@+id/tvTaskDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/01/2025"
                    android:textColor="#64748B"
                    android:textSize="11sp" />
        </LinearLayout>

        <TextView
                android:id="@+id/tvTaskAssigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Asignado: Usuario"
                android:textColor="#B8FF3C"
                android:textSize="11sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>