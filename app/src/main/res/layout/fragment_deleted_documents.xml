<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F172A">

    <!-- Top App Bar -->
    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toBottomOf="parent">

        <!-- Title -->
        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAPELERA DE DOCUMENTOS"
                android:textColor="#EF4444"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Los documentos se eliminarán permanentemente después de 30 días"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
                android:id="@+id/llActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Regresar"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#334155"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="6dp" />

            <Button
                    android:id="@+id/btnPurgar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Purgar 30+ días"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#DC2626"
                    android:textSize="12sp"
                    app:cornerRadius="6dp" />
        </LinearLayout>

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:layout_constraintTop_toBottomOf="@id/llActionButtons">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar en papelera..."
                    android:textColor="#000000"
                    android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- SwipeRefreshLayout -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tilSearch"
                app:layout_constraintBottom_toBottomOf="parent">

            <!-- Documents RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDeletedDocuments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Empty State -->
        <TextView
                android:id="@+id/tvPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay documentos en la papelera"
                android:textAlignment="center"
                android:textColor="#64748B"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>