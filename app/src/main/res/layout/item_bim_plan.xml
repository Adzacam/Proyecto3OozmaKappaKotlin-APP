<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="04N02-36_GVA_NNN-NNN_AR_M3D_NN_06_Deportivo.ifc"
                    android:textColor="#60A5FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />
        </LinearLayout>

        <!-- Info Grid -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <!-- Project Column -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROYECTO"
                        android:textColor="#B8FF3C"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/tvProject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mocca Master"
                        android:textColor="#B8FF3C"
                        android:textSize="12sp" />
            </LinearLayout>

            <!-- Type Column -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIPO"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TXT"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
            </LinearLayout>

            <!-- URL Column -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL / ENLACE"
                        android:textColor="#60A5FA"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/tvUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://127.0.0.1:80..."
                        android:textColor="#60A5FA"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
            </LinearLayout>

            <!-- Date Column -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FECHA"
                        android:textColor="#94A3B8"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28/10/2025\n08:57"
                        android:textColor="#94A3B8"
                        android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

            <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Descargar"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:backgroundTint="#B8FF3C"
                    android:layout_marginEnd="4dp"
                    app:cornerRadius="6dp" />

            <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Editar"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3B82F6"
                    android:layout_marginEnd="4dp"
                    app:cornerRadius="6dp" />

            <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Eliminar"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EF4444"
                    app:cornerRadius="6dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>