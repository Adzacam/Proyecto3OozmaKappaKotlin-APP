<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A">

    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIBLIOTECA DE PLANOS BIM"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <LinearLayout
                        android:id="@+id/llActionButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/btnSubirPlano"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Subir Plano"
                            android:textColor="#000000"
                            android:backgroundTint="#B8FF3C"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="8dp" />

                    <Button
                            android:id="@+id/btnVerPapelera"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Ver Papelera"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#EF4444"
                            android:textSize="12sp"
                            app:cornerRadius="8dp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llFilters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:boxBackgroundColor="#FFFFFF"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:startIconDrawable="@android:drawable/ic_menu_search">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Buscar título o descripción..."
                                android:background="@drawable/badge_background"
                                android:textColor="#FFFFFF"
                                android:textColorHint="#6B7280"
                                android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                        <Spinner
                                android:id="@+id/spinnerTipo"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_background"
                                android:layout_marginEnd="4dp" />

                        <Spinner
                                android:id="@+id/spinnerSort"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_background"
                                android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                        <EditText
                                android:id="@+id/etDateFrom"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/badge_background"
                                android:hint="Desde: dd/mm/aaaa"
                                android:textSize="12sp"
                                android:padding="8dp"
                                android:focusable="false"
                                android:layout_marginEnd="4dp"
                                android:textColorHint="#94A3B8"
                                android:textColor="#000000"/>

                        <EditText
                                android:id="@+id/etDateTo"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/badge_background"
                                android:hint="Hasta: dd/mm/aaaa"
                                android:textSize="12sp"
                                android:padding="8dp"
                                android:focusable="false"
                                android:layout_marginStart="4dp"
                                android:textColorHint="#94A3B8"
                                android:textColor="#000000"/>
                    </LinearLayout>

                    <Button
                            android:id="@+id/btnLimpiarFiltros"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Limpiar filtros"
                            android:textSize="10sp"
                            android:backgroundTint="#334155"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="end"
                            app:cornerRadius="6dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBimPlans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="16dp"
                        android:clipToPadding="false"
                        android:paddingBottom="80dp" />

                <TextView
                        android:id="@+id/tvEmptyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay planos BIM disponibles"
                        android:textColor="#64748B"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>