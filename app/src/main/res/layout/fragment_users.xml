<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A">

    <!-- Top App Bar -->
    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toBottomOf="parent">

        <!-- Title -->
        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GESTIÃ“N DE USUARIOS"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
                android:id="@+id/llActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <Button
                    android:id="@+id/btnCreateUser"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Crear Usuario"
                    android:textColor="#000000"
                    android:backgroundTint="#B8FF3C"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="6dp" />

            <Button
                    android:id="@+id/btnViewDeleted"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ver Eliminados"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EF4444"
                    android:textSize="12sp"
                    app:cornerRadius="6dp" />
        </LinearLayout>

        <!-- SwipeRefreshLayout -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/llActionButtons"
                app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!-- Users RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUsers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="8dp"
                        android:background="#1A1A1A"/>

                <!-- Empty State -->
                <LinearLayout
                        android:id="@+id/llEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:alpha="0.3"
                            android:contentDescription="No users"
                            android:src="@drawable/ic_employees"
                            app:tint="#9CA3AF" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="No hay usuarios registrados"
                            android:textColor="#64748B"
                            android:textSize="16sp" />
                </LinearLayout>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
