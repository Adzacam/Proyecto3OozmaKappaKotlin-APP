<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F172A">

    <!-- Top App Bar -->
    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toBottomOf="parent">

        <!-- Title -->
        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIBLIOTECA DE DOCUMENTOS"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
                android:id="@+id/llActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <Button
                    android:id="@+id/btnSubirDocumento"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Subir Documento"
                    android:textColor="#000000"
                    android:backgroundTint="#B8FF3C"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="6dp" />

            <Button
                    android:id="@+id/btnVerPapelera"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ver Papelera"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EF4444"
                    android:textSize="12sp"
                    app:cornerRadius="6dp" />
        </LinearLayout>

        <!-- Filters Section -->
        <LinearLayout
                android:id="@+id/llFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/llActionButtons">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:startIconDrawable="@android:drawable/ic_menu_search">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Buscar título o descripción..."
                        android:background="@drawable/spinner_background"
                        android:textColor="#000000"
                        android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Filter Row -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <!-- Type Filter -->
                <Spinner
                        android:id="@+id/spinnerTipo"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:layout_marginEnd="8dp" />

                <!-- Project Filter -->
                <Spinner
                        android:id="@+id/spinnerProyecto"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:layout_marginEnd="8dp" />

                <!-- Clear Filters Button -->
                <Button
                        android:id="@+id/btnLimpiarFiltros"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Limpiar filtros"
                        android:textSize="11sp"
                        android:backgroundTint="#334155"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ✅ SwipeRefreshLayout para actualizar deslizando -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/llFilters"
                app:layout_constraintBottom_toBottomOf="parent">

            <!-- Documents RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDocuments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Empty State -->
        <TextView
                android:id="@+id/tvPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biblioteca de Documentos"
                android:textAlignment="center"
                android:textColor="#64748B"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>