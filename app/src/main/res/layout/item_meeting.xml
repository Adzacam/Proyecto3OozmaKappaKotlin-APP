<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#6B82F6"
        app:strokeWidth="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#8B5CF6"
                    android:background="@drawable/circle_background_dark"
                    android:padding="10dp" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvMeetingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Título de la Reunión"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/tvMeetingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="DD/MM/YYYY HH:MM"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"/>
            </LinearLayout>

            <ImageButton
                    android:id="@+id/btnDeleteMeeting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="#EF4444"
                    android:contentDescription="Eliminar reunión"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#334155" />

        <TextView
                android:id="@+id/tvMeetingProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Proyecto"
                android:textColor="#CBD5E1"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_projects"
                android:drawablePadding="8dp"
                android:drawableTint="#10B981"/>

        <TextView
                android:id="@+id/tvMeetingParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="N participante(s)"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_profile"
                android:drawablePadding="8dp"
                android:drawableTint="#60A5FA"/>

        <TextView
                android:id="@+id/tvMeetingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descripción de la reunión"
                android:textColor="#CBD5E1"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Toca para editar"
                android:textColor="#64748B"
                android:textSize="11sp"
                android:textStyle="italic"
                android:layout_gravity="end"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>