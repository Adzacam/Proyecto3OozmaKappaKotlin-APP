<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Header: Usuario y Fecha -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <!-- Usuario -->
            <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usuario"
                    android:textColor="#B8FF3C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <!-- Fecha -->
            <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/11/2025, 18:50:21"
                    android:textColor="#64748B"
                    android:textSize="11sp"/>
        </LinearLayout>

        <!-- Acción -->
        <TextView
                android:id="@+id/tvAccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descargó el documento 'Proyecto'"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

        <!-- Footer: Registro ID e IP -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <!-- ID Registro -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro: "
                    android:textColor="#94A3B8"
                    android:textSize="11sp"/>

            <TextView
                    android:id="@+id/tvRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#94A3B8"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <!-- IP Address (opcional) -->
            <TextView

                    android:id="@+id/tvIpAddress"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:text="192.168.1.100"
                    android:textColor="#2563EB"
                    android:textSize="10sp"
                    android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>