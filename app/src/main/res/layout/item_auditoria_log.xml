                    android:paddingVertical="4dp"
                    tools:text="ðŸ“„ Documentos" />
        </LinearLayout>

        <TextView
                android:id="@+id/tvAccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="AcciÃ³n realizada"
