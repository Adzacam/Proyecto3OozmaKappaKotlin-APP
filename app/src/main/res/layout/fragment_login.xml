<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A"
        tools:context=".ui.login.LoginFragment">

    <!-- Logo -->
    <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="109dp"
            android:layout_height="101dp"
            android:src="@drawable/logodevelarq"
            android:contentDescription="@string/app_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardLogin"
            app:layout_constraintVertical_bias="0.3"/>

    <!-- Card de Login -->
    <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="#262626"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

            <!-- Título DEVELARQ -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEVELARQ"
                    android:textColor="#C4F847"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

            <!-- Badge BIM Management Office -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bim_management_office"
                    android:textColor="#3B82F6"
                    android:textSize="12sp"
                    android:background="@drawable/bg_badge"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

            <!-- Título Iniciar Sesión -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iniciar_sesion"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"/>

            <!-- Subtítulo -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accede_panel_bim"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"/>

            <!-- Email Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/nav_item_color"
                    app:boxBackgroundColor="#1A1A1A"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_hint"
                        android:textColorHint="#6B7280"
                        android:textColor="#FFFFFF"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contraseña Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contrasena"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

            <!-- Contraseña Input -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/nav_item_color"
                    app:boxBackgroundColor="#1A1A1A"
                    app:hintEnabled="false"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#9CA3AF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_hint"
                        android:textColorHint="#6B7280"
                        android:textColor="#FFFFFF"
                        android:inputType="textPassword"
                        android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Recordarme y Olvidaste contraseña -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                <CheckBox
                        android:id="@+id/cbRememberMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recordarme"
                        android:textColor="#9CA3AF"
                        android:textSize="14sp"
                        android:buttonTint="#C4F847"/>

                <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/olvidaste_contrasena"
                        android:textColor="#3B82F6"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"/>
            </LinearLayout>

            <!-- Botón Iniciar Sesión -->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/iniciar_sesion"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#3B82F6"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="textEnd"
                    app:iconTint="#FFFFFF"
                    android:layout_marginTop="24dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Volver al inicio -->
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.885"/>

</androidx.constraintlayout.widget.ConstraintLayout>