<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="16dp">

    <View
            android:id="@+id/viewTimelineLine"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:background="#3B82F6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/viewTimelineDot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_timeline_dot"
            app:layout_constraintTop_toTopOf="@id/cardContent"
            app:layout_constraintBottom_toBottomOf="@id/cardContent"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cardContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#6B82F6"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewTimelineDot"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/ivEventIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_event"
                        app:tint="#3B82F6"
                        tools:ignore="ContentDescription" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tvEventTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TÃ­tulo del Evento"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Documento subido" />

                    <TextView
                            android:id="@+id/tvEventUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuario"
                            android:textColor="#94A3B8"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            tools:text="Por: Juan PÃ©rez" />
                </LinearLayout>

                <TextView
                        android:id="@+id/tvEventType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIPO"
                        android:textColor="#F59E0B"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_event_type_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        tools:text="DOC" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="DescripciÃ³n del evento"
                    android:textColor="#CBD5E1"
                    android:textSize="13sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    tools:text="Se subiÃ³ el documento 'Plano de construcciÃ³n v2.0' al proyecto" />

            <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fecha"
                    android:textColor="#64748B"
                    android:textSize="11sp"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/ic_calendar"
                    app:drawableTint="#64748B"
                    tools:text="ðŸ“… 28/11/2025, 10:30" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>