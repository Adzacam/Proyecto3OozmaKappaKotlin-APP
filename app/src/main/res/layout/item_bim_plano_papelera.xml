<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#EF4444"
        app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete"
                app:tint="#EF4444"
                android:background="@drawable/circle_background_dark"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                tools:text="Plano Estructural Nivel 2.pdf"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toTopOf="@id/ivIcon" />

        <TextView
                android:id="@+id/tvProyecto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                tools:text="Proyecto: Torre Central"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#334155"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/ivIcon" />

        <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/divider">

            <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PDF"
                    android:textColor="#60A5FA"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/badge_background_blue"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_marginEnd="12dp"/>

            <TextView
                    android:id="@+id/tvEliminadoEl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Eliminado: 28/10/2025"
                    android:textColor="#94A3B8"
                    android:textSize="11sp" />
        </LinearLayout>

        <TextView
                android:id="@+id/tvDiasRestantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="⚠️ Se eliminará en 5 días"
                android:textColor="#F59E0B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/llInfo"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvDiasRestantes">

            <Button
                    android:id="@+id/btnRestaurar"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Restaurar"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:backgroundTint="#B8FF3C"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp" />

            <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Eliminar"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EF4444"
                    app:cornerRadius="8dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>