        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <Button
                    android:id="@+id/btnViewDay"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Día"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="3dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnViewWeek"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Semana"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="3dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnViewMonth"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Mes"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="3dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnViewAgenda"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Agenda"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.Material3.Button"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fecha actual centrada - Más compacta -->
    <TextView
            android:id="@+id/tvCurrentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="#1E293B"
            app:layout_constraintTop_toBottomOf="@id/dateNavigation"/>

    <!-- Vista de Mes con Grid -->
    <LinearLayout
            android:id="@+id/layoutMonthView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#0F172A"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentDate"
            app:layout_constraintBottom_toBottomOf="parent">

        <!-- Encabezados de días -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#1E293B">
            <TextView android:text="DOM" style="@style/CalendarDayHeader"/>
            <TextView android:text="LUN" style="@style/CalendarDayHeader"/>
            <TextView android:text="MAR" style="@style/CalendarDayHeader"/>
            <TextView android:text="MIE" style="@style/CalendarDayHeader"/>
            <TextView android:text="JUE" style="@style/CalendarDayHeader"/>
            <TextView android:text="VIE" style="@style/CalendarDayHeader"/>
            <TextView android:text="SAB" style="@style/CalendarDayHeader"/>
        </LinearLayout>

        <!-- RecyclerView para los días del mes -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMonthCalendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"/>
    </LinearLayout>

    <!-- WeekView Calendar - Para Día y Semana -->
    <com.alamkanak.weekview.WeekView
            android:id="@+id/weekView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#0F172A"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentDate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FAB para agregar reunión -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddMeeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#B8FF3C"
            app:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Programar nueva reunión"/>

    <!-- Progress Bar -->
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="#B8FF3C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>