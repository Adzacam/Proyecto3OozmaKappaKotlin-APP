<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F172A">

    <!-- Top App Bar -->
    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content Container -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Title -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendario de Reuniones"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

            <!-- Filters Card -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filtros"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                    <!-- Filter Tabs -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                        <Button
                                android:id="@+id/btnFilterAll"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="Todas"
                                android:textSize="12sp"
                                android:backgroundTint="#B8FF3C"
                                android:textColor="#000000"
                                android:layout_marginEnd="4dp" />

                        <Button
                                android:id="@+id/btnFilterProximas"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="PrÃ³ximas"
                                android:textSize="12sp"
                                android:backgroundTint="#334155"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="4dp" />

                        <Button
                                android:id="@+id/btnFilterPasadas"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="Pasadas"
                                android:textSize="12sp"
                                android:backgroundTint="#334155"
                                android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Project Filter -->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proyecto"
                            android:textColor="#94A3B8"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                    <Spinner
                            android:id="@+id/spinnerProjects"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="12dp" />

                    <!-- Participants Filter -->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Participantes"
                            android:textColor="#94A3B8"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                    <Spinner
                            android:id="@+id/spinnerParticipants"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@android:color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Calendar Placeholder -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                <TextView
                        android:id="@+id/tvPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:gravity="center"
                        android:text="Vista de Calendario\n\n(Implementar CalendarView)"
                        android:textAlignment="center"
                        android:textColor="#64748B"
                        android:textSize="16sp"
                        android:padding="24dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>