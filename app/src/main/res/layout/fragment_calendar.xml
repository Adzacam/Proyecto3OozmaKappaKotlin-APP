<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F172A">

    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Filtros superiores en diseño vertical para móvil -->
    <LinearLayout
            android:id="@+id/llFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#1E293B"
            app:layout_constraintTop_toBottomOf="@id/topAppBar">

        <!-- Botones de filtro: Todas, Próximas, Pasadas -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Todas"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#B8FF3C"
                    android:textColor="#000000"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnFilterProximas"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Próximas"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnFilterPasadas"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Pasadas"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.Material3.Button"/>
        </LinearLayout>

        <!-- Spinners en diseño compacto -->
        <Spinner
                android:id="@+id/spinnerProjects"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="6dp"
                android:popupBackground="#1E293B"/>

        <Spinner
                android:id="@+id/spinnerParticipants"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:popupBackground="#1E293B"/>
    </LinearLayout>

    <!-- Navegación de fecha compacta -->
    <LinearLayout
            android:id="@+id/dateNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#0F172A"
            app:layout_constraintTop_toBottomOf="@id/llFilters">

        <!-- Primera fila: Navegación de días -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

            <Button
                    android:id="@+id/btnToday"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:text="Hoy"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#B8FF3C"
                    android:textColor="#000000"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnPreviousDay"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:text="Ant."
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnNextDay"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:text="Sig."
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.Material3.Button"/>
        </LinearLayout>

        <!-- Segunda fila: Botones de vista -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <Button
                    android:id="@+id/btnViewDay"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Día"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnViewWeek"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Semana"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnViewMonth"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Mes"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnViewAgenda"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Agenda"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.Material3.Button"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fecha actual centrada -->
    <TextView
            android:id="@+id/tvCurrentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miércoles 06 de Noviembre"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#1E293B"
            app:layout_constraintTop_toBottomOf="@id/dateNavigation"/>

    <!-- WeekView Calendar -->
    <com.alamkanak.weekview.WeekView
            android:id="@+id/weekView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#0F172A"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentDate"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- FAB para agregar reunión -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddMeeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#B8FF3C"
            app:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Programar nueva reunión"/>

    <!-- Progress Bar -->
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="#B8FF3C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>