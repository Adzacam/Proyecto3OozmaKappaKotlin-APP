<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F172A">

    <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Filtros superiores - Más compactos -->
    <LinearLayout
            android:id="@+id/llFilters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#1E293B"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

            <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Todas"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#B8FF3C"
                    android:textColor="#000000"
                    android:layout_marginEnd="3dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnFilterProximas"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Próximas"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="3dp"
                    style="@style/Widget.Material3.Button"/>

            <Button
                    android:id="@+id/btnFilterPasadas"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Pasadas"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#334155"
                    android:textColor="#FFFFFF"
                    style="@style/Widget.Material3.Button"/>
        </LinearLayout>

        <Spinner
                android:id="@+id/spinnerProjects"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="4dp"
                android:popupBackground="#1E293B"/>

        <Spinner
                android:id="@+id/spinnerParticipants"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:popupBackground="#1E293B"/>
    </LinearLayout>
    <LinearLayout
