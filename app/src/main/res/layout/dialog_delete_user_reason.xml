<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/badge_background_2">

    <!-- Título -->
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B8FF3C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtítulo con nombre del usuario -->
    <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="¿Está seguro de eliminar a [nombre]?"
            android:textSize="14sp"
            android:textColor="#2563EB"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Advertencia -->
    <LinearLayout
            android:id="@+id/llWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="#FEF3C7"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_warning"
                android:layout_marginEnd="8dp"
                app:tint="#F59E0B" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Debe proporcionar un motivo de eliminación (mínimo 30 caracteres)"
                android:textSize="12sp"
                android:textColor="#92400E" />
    </LinearLayout>

    <!-- Campo de texto para el motivo -->
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#F9FAFB"
            app:boxStrokeColor="#3B82F6"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            android:textColor="#FFFFFF"
            android:textColorHint="#6B7280"
            app:layout_constraintTop_toBottomOf="@id/llWarning">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Motivo de eliminación"
                android:minHeight="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="500"
                android:textSize="14sp"
                android:background="@drawable/badge_background"
                android:textColor="#FFFFFF"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Mensaje de validación -->
    <TextView
            android:id="@+id/tvValidation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0/30 caracteres"
            android:textSize="12sp"
            android:textColor="#EF4444"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tilMotivo"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Botones -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/tvValidation">

        <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cancelar"
                android:textColor="#6B7280"
                android:backgroundTint="#F3F4F6"
                android:layout_marginEnd="8dp" />

        <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#EF4444"
                android:enabled="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>