<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0F172A"
            android:padding="24dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/badge_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDITAR USUARIO"
                    android:textColor="#3B82F6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modifica los datos del usuario"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nombre"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Apellido"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Email"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Teléfono (opcional)"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Rol"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6">

            <AutoCompleteTextView
                    android:id="@+id/actvRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Cambiar contraseña"
                android:textColor="#FFFFFF"
                app:thumbTint="#3B82F6"
                app:trackTint="#64748B" />

        <LinearLayout
                android:id="@+id/llPasswordSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nueva Contraseña"
                    android:textColorHint="#94A3B8"
                    app:boxBackgroundColor="#1E293B"
                    app:boxStrokeColor="#3B82F6"
                    app:hintTextColor="#3B82F6"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#94A3B8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#1E293B">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La contraseña debe cumplir:"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/tvPasswordLen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="• 8-20 caracteres"
                        android:textColor="#F87171"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tvPasswordUpper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Al menos una mayúscula"
                        android:textColor="#F87171"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tvPasswordLower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Al menos una minúscula"
                        android:textColor="#F87171"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tvPasswordNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Al menos un número"
                        android:textColor="#F87171"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tvPasswordSym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Al menos un símbolo (@$!%*?)"
                        android:textColor="#F87171"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tvPasswordSpc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Sin espacios incorrectos"
                        android:textColor="#F87171"
                        android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

        <LinearLayout
                android:id="@+id/llButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

            <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:backgroundTint="#64748B"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="8dp" />

            <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Actualizar"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:backgroundTint="#B8FF3C"
                    app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>