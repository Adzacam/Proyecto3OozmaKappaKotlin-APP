<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0F172A"
            android:padding="24dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/badge_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CREAR NUEVO PROYECTO"
                    android:textColor="#10B981"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completa la información del proyecto"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Nombre del Proyecto -->
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nombre del Proyecto"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#10B981"
                app:hintTextColor="#10B981"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Descripción -->
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Descripción del Proyecto"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#10B981"
                app:hintTextColor="#10B981"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top|start" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cliente -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente Asociado"
                android:textColor="#E2E8F0"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        <Spinner
                android:id="@+id/spinnerClient"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp" />

        <!-- Responsable -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsable Principal"
                android:textColor="#E2E8F0"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        <Spinner
                android:id="@+id/spinnerResponsable"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp" />

        <!-- Fecha de Inicio -->
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Fecha de Inicio"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#10B981"
                app:hintTextColor="#10B981"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="#10B981"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha de Fin -->
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Fecha de Fin (Opcional)"
                android:textColorHint="#94A3B8"
                app:boxBackgroundColor="#1E293B"
                app:boxStrokeColor="#10B981"
                app:hintTextColor="#10B981"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="#10B981"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Estado -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado del Proyecto"
                android:textColor="#E2E8F0"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="24dp" />

        <!-- Botones -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

            <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:backgroundTint="#64748B"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="8dp"/>

            <Button
                    android:id="@+id/btnCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Crear Proyecto"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:backgroundTint="#B8FF3C"
                    app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>