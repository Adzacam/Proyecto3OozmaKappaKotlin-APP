<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#0F172A"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginVertical="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTaskTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título de tarea"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Revisar planos arquitectónicos" />

            <TextView
                    android:id="@+id/tvTaskProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proyecto"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="Edificio Central" />
        </LinearLayout>

        <TextView
                android:id="@+id/tvTaskPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALTA"
                android:textColor="#EF4444"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/bg_type_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>