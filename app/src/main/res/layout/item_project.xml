<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#0F172A"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Nombre del Proyecto -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Proyecto Alpha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/spinnerEstado"
            android:layout_marginEnd="8dp" />

        <!-- Cliente -->
        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#9CA3AF"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Cliente: Juan Pérez"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toStartOf="@id/spinnerEstado"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp" />

        <!-- Responsable -->
        <TextView
            android:id="@+id/tvResponsable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#9CA3AF"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Responsable: María García"
            app:layout_constraintStart_toStartOf="@id/tvCliente"
            app:layout_constraintTop_toBottomOf="@id/tvCliente"
            app:layout_constraintEnd_toStartOf="@id/spinnerEstado"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Descripción del proyecto que puede ser muy larga y ocupar varias líneas"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvResponsable"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Spinner Estado -->
        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="120dp"
            android:background="@drawable/bg_spinner"
            android:paddingHorizontal="8dp"
            android:entries="@array/project_states"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>