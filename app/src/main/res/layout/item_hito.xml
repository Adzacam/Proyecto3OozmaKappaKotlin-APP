<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#1E293B"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#6B82F6"
        app:strokeWidth="2dp"
        android:foreground="?attr/selectableItemBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardStatusIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#10B981"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                <ImageView
                        android:id="@+id/ivStatusIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        app:tint="#FFFFFF"
                        tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvHitoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Hito"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Aprobaci贸n de planos" />

                <TextView
                        android:id="@+id/tvHitoDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        tools:text=" 15/12/2025" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="#10B981"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_hito_status_badge"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    tools:text="Completado" />
        </LinearLayout>

        <TextView
                android:id="@+id/tvHitoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Descripci贸n del hito"
                android:textColor="#CBD5E1"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Revisi贸n y aprobaci贸n final de todos los planos arquitect贸nicos" />

        <TextView
                android:id="@+id/tvHitoEncargado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Encargado"
                android:textColor="#64748B"
                android:textSize="12sp"
                android:drawablePadding="6dp"
                app:drawableStartCompat="@drawable/ic_person"
                app:drawableTint="#64748B"
                tools:text=" Responsable: Juan P茅rez" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#334155" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

            <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="Editar"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3B82F6"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="16dp" />

            <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Eliminar"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EF4444"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>