<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="12dp"
              android:background="#1E293B"
              android:layout_marginBottom="8dp">

    <TextView
            android:id="@+id/tvMeetingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Reunión de Planos" />

    <TextView
            android:id="@+id/tvMeetingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            tools:text="10:00 AM - 11:30 AM" />

    <TextView
            android:id="@+id/tvMeetingProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B8FF3C"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            tools:text="Proyecto Teclado Mecánico" />
</LinearLayout>