<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="2dp"
              android:background="#334155"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp">

    <TextView
            android:id="@+id/tvMeetingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="ReuniÃ³n Planos" />

    <TextView
            android:id="@+id/tvMeetingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#94A3B8"
            android:textSize="8sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="10:00 - 11:30" />

    <TextView
            android:id="@+id/tvMeetingProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B8FF3C"
            android:textSize="7sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="Proyecto X" />
</LinearLayout>