<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="8dp"
                                   app:cardBackgroundColor="#0F172A"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <!-- Nombre y Email -->
        <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario Eliminado"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="email@ejemplo.com"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />

        <!-- Rol y BotÃ³n Restaurar -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvUserRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_role_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="ingeniero"
                    android:textColor="#2563EB"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRestore"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    android:text="Restaurar"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    app:backgroundTint="#10B981"
                    app:cornerRadius="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>