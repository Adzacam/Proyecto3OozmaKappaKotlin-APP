<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <!-- ========================================== -->
    <!-- AUTH -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.develarqapp.ui.login.LoginFragment"
            android:label="Iniciar Sesión"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
                app:destination="@id/forgotPasswordFragment" />
        <action
                android:id="@+id/action_loginFragment_to_dashboardFragment"
                app:destination="@id/dashboardFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true" />
    </fragment>

    <fragment
            android:id="@+id/forgotPasswordFragment"
            android:name="com.example.develarqapp.ui.login.ForgotPasswordFragment"
            android:label="Recuperar Contraseña"
            tools:layout="@layout/fragment_forgot_password">
        <action
                android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="false" />
    </fragment>

    <fragment
            android:id="@+id/verifyEmailFragment"
            android:name="com.example.develarqapp.ui.auth.VerifyEmailFragment"
            android:label="Verificar Email"
            tools:layout="@layout/fragment_verify_email">
        <action
                android:id="@+id/action_verifyEmailFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="false" />
    </fragment>

    <!-- ========================================== -->
    <!-- DASHBOARD -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/dashboardFragment"
            android:name="com.example.develarqapp.ui.dashboard.DashboardFragment"
            android:label="Dashboard"
            tools:layout="@layout/fragment_dashboard">
        <action
                android:id="@+id/action_dashboardFragment_to_usersFragment"
                app:destination="@id/usersFragment" />
        <action
                android:id="@+id/action_dashboardFragment_to_projectsFragment"
                app:destination="@id/projectsFragment" />
        <action
                android:id="@+id/action_dashboardFragment_to_kanbanFragment"
                app:destination="@id/kanbanFragment" />
        <action
                android:id="@+id/action_dashboardFragment_to_calendarFragment"
                app:destination="@id/calendarFragment" />
        <action
                android:id="@+id/action_dashboardFragment_to_documentsFragment"
                app:destination="@id/documentsFragment" />
        <action
                android:id="@+id/action_dashboardFragment_to_downloadHistoryFragment"
                app:destination="@id/downloadHistoryFragment" />
        <action
                android:id="@+id/action_dashboardFragment_to_bimPlanosFragment"
                app:destination="@id/bimPlanosFragment"/>
        <action
                android:id="@+id/action_dashboardFragment_to_profileFragment"
                app:destination="@id/profileFragment"/>
        <action
                android:id="@+id/action_dashboardFragment_to_notificationsFragment"
                app:destination="@id/notificationsFragment"/>
    </fragment>

    <!-- ========================================== -->
    <!-- USERS -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/usersFragment"
            android:name="com.example.develarqapp.ui.users.UsersFragment"
            android:label="Usuarios"
            tools:layout="@layout/fragment_users">
        <action
                android:id="@+id/action_usersFragment_to_registerEmployeeFragment"
                app:destination="@id/registerEmployeeFragment" />
        <action
                android:id="@+id/action_usersFragment_to_deletedUsersFragment"
                app:destination="@id/deletedUsersFragment" />
    </fragment>

    <fragment
            android:id="@+id/registerEmployeeFragment"
            android:name="com.example.develarqapp.ui.register_employee.RegisterEmployeeFragment"
            android:label="Registrar Empleado"
            tools:layout="@layout/fragment_register_employee">
        <action
                android:id="@+id/action_registerEmployeeFragment_to_usersFragment"
                app:destination="@id/usersFragment"
                app:popUpTo="@id/usersFragment"
                app:popUpToInclusive="false" />
    </fragment>

    <fragment
            android:id="@+id/deletedUsersFragment"
            android:name="com.example.develarqapp.ui.users.DeletedUsersFragment"
            android:label="Usuarios Eliminados"
            tools:layout="@layout/fragment_deleted_users">
        <action
                android:id="@+id/action_deletedUsersFragment_to_usersFragment"
                app:destination="@id/usersFragment" />
    </fragment>

    <!-- ========================================== -->
    <!-- PROJECTS -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/projectsFragment"
            android:name="com.example.develarqapp.ui.projects.ProjectsFragment"
            android:label="Proyectos"
            tools:layout="@layout/fragment_projects">
        <action
                android:id="@+id/action_projectsFragment_to_projectTimelineFragment"
                app:destination="@id/projectTimelineFragment" />
        <action
                android:id="@+id/action_projectsFragment_to_projectHitosFragment"
                app:destination="@id/projectHitosFragment" />
    </fragment>

    <fragment
            android:id="@+id/projectTimelineFragment"
            android:name="com.example.develarqapp.ui.projects.ProjectTimelineFragment"
            android:label="Timeline"
            tools:layout="@layout/fragment_project_timeline">
        <argument
                android:name="projectId"
                app:argType="long" />
        <argument
                android:name="projectName"
                app:argType="string" />
        <action
                android:id="@+id/action_projectTimelineFragment_to_projectsFragment"
                app:destination="@id/projectsFragment"/>
    </fragment>

    <fragment
            android:id="@+id/projectHitosFragment"
            android:name="com.example.develarqapp.ui.projects.ProjectHitosFragment"
            android:label="Hitos"
            tools:layout="@layout/fragment_project_hitos">
        <argument
                android:name="projectId"
                app:argType="long" />
        <argument
                android:name="projectName"
                app:argType="string" />
        <action
                android:id="@+id/action_projectHitosFragment_to_projectsFragment"
                app:destination="@id/projectsFragment"/>
    </fragment>

    <!-- ========================================== -->
    <!-- KANBAN -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/kanbanFragment"
            android:name="com.example.develarqapp.ui.kanban.KanbanFragment"
            android:label="Tablero Kanban"
            tools:layout="@layout/fragment_kanban" />

    <!-- ========================================== -->
    <!-- CALENDAR -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/calendarFragment"
            android:name="com.example.develarqapp.ui.calendar.CalendarFragment"
            android:label="Calendario"
            tools:layout="@layout/fragment_calendar">
        <action
                android:id="@+id/action_calendarFragment_to_createMeetingDialogFragment"
                app:destination="@id/createMeetingDialogFragment"/>
        <action
                android:id="@+id/action_calendarFragment_to_EditMeetingDialogFragment"
                app:destination="@id/EditMeetingDialogFragment"/>
    </fragment>

    <dialog
            android:id="@+id/createMeetingDialogFragment"
            android:name="com.example.develarqapp.ui.calendar.CreateMeetingDialogFragment"
            android:label="Programar Reunión"
            tools:layout="@layout/dialog_create_meeting">
        <action
                android:id="@+id/action_createMeetingDialogFragment_to_calendarFragment"
                app:destination="@id/calendarFragment"/>
    </dialog>

    <dialog
            android:id="@+id/EditMeetingDialogFragment"
            android:name="com.example.develarqapp.ui.calendar.EditMeetingDialogFragment"
            android:label="Editar Reunión"
            tools:layout="@layout/dialog_edit_meeting">
        <action
                android:id="@+id/action_EditMeetingDialogFragment_to_calendarFragment"
                app:destination="@id/calendarFragment"/>
    </dialog>

    <!-- ========================================== -->
    <!-- DOCUMENTS -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/documentsFragment"
            android:name="com.example.develarqapp.ui.documents.DocumentsFragment"
            android:label="Documentos"
            tools:layout="@layout/fragment_documents">
        <action
                android:id="@+id/action_documentsFragment_to_deletedDocumentsFragment"
                app:destination="@id/deletedDocumentsFragment" />
        <action
                android:id="@+id/action_documentsFragment_to_UploadDocumentDialogFragment"
                app:destination="@id/UploadDocumentDialogFragment"/>
        <action
                android:id="@+id/action_documentsFragment_to_EditDocumentDialogFragment"
                app:destination="@id/EditDocumentDialogFragment"/>
    </fragment>

    <fragment
            android:id="@+id/EditDocumentDialogFragment"
            android:name="com.example.develarqapp.ui.documents.EditDocumentDialogFragment"
            android:label="Documentos"
            tools:layout="@layout/dialog_edit_document">
        <action
                android:id="@+id/action_EditDocumentDialogFragment_to_documentsFragment"
                app:destination="@id/documentsFragment"/>
    </fragment>

    <fragment
            android:id="@+id/UploadDocumentDialogFragment"
            android:name="com.example.develarqapp.ui.documents.UploadDocumentDialogFragment"
            android:label="Documentos"
            tools:layout="@layout/dialog_upload_document">
        <action
                android:id="@+id/action_UploadDocumentDialogFragment_to_documentsFragment"
                app:destination="@id/documentsFragment"/>
    </fragment>

    <fragment
            android:id="@+id/deletedDocumentsFragment"
            android:name="com.example.develarqapp.ui.documents.DeletedDocumentsFragment"
            android:label="Papelera de Documentos"
            tools:layout="@layout/fragment_deleted_documents">
        <action
                android:id="@+id/action_deletedDocumentsFragment_to_documentsFragment"
                app:destination="@id/documentsFragment"
                app:popUpTo="@id/documentsFragment"
                app:popUpToInclusive="true" />
    </fragment>

    <!-- ========================================== -->
    <!-- DOWNLOADS -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/downloadHistoryFragment"
            android:name="com.example.develarqapp.ui.downloads.DownloadHistoryFragment"
            android:label="Historial de Descargas"
            tools:layout="@layout/fragment_download_history" />

    <!-- ========================================== -->
    <!-- AUDIT -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/auditoriaFragment"
            android:name="com.example.develarqapp.ui.auditorias.AuditoriaFragment"
            android:label="Auditoría"
            tools:layout="@layout/fragment_auditoria" />

    <!-- ========================================== -->
    <!-- BIM PLANOS -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/bimPlanosFragment"
            android:name="com.example.develarqapp.ui.bimplanos.BimPlanosFragment"
            android:label="Planos BIM"
            tools:layout="@layout/fragment_bim_planos">
    </fragment>

    <fragment
            android:id="@+id/bimPlanosPapeleraFragment"
            android:name="com.example.develarqapp.ui.bimplanos.BimPlanosPapeleraFragment"
            android:label="Papelera de Planos BIM"
            tools:layout="@layout/fragment_bim_planos_papelera">
        <action
                android:id="@+id/action_bimPlanosPapeleraFragment_to_bimPlanosFragment"
                app:destination="@id/bimPlanosFragment"
                app:popUpTo="@id/bimPlanosFragment"
                app:popUpToInclusive="false" />
    </fragment>

    <!-- ========================================== -->
    <!-- PROFILE & NOTIFICATIONS -->
    <!-- ========================================== -->
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.develarqapp.ui.profile.ProfileFragment"
            android:label="Mi Perfil"
            tools:layout="@layout/fragment_profile" />

    <fragment
            android:id="@+id/notificationsFragment"
            android:name="com.example.develarqapp.ui.notifications.NotificationsFragment"
            android:label="Notificaciones"
            tools:layout="@layout/fragment_notifications" />

    <!-- Global Actions -->
    <action
            android:id="@+id/action_global_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    <action
            android:id="@+id/action_global_to_profileFragment"
            app:destination="@id/profileFragment" />

    <action
            android:id="@+id/action_global_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />

</navigation>